<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_follower_photo"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toStartOf="@+id/follower_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/follower_username"
        style="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintStart_toEndOf="@+id/iv_follower_photo"
        app:layout_constraintTop_toTopOf="@+id/iv_follower_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/username" />

    <TextView
        android:id="@+id/tv_follower_username"
        style="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/follower_username"
        app:layout_constraintTop_toTopOf="@+id/follower_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="89dp"
        android:layout_toEndOf="@id/follower_username"
        android:text="@string/github_username" />
</androidx.constraintlayout.widget.ConstraintLayout>